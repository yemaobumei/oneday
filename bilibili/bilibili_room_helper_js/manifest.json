{ 
    "manifest_version": 2, //固定的
    "name": "Cissy's First Extension", //插件名称
    "version": "1.0", //插件使用的版本
    "description": "auto reply to the danmu of the bilibili_live_room.", //插件的描述
    "browser_action": { //插件加载后生成图标
	    "default_icon": {
	        "19": "imgs/icon-19.png",
	        "38": "imgs/icon-38.png"
	     },
        "default_title": "Thank you for your interest in our products.
 ", //鼠标移到图标显示的文字 
        "default_popup": "popup.html" //单击图标执行的文件
    }, 
   "icons": {
      "256": "imgs/icon-256.png",
      "128": "imgs/icon-128.png",
      "16": "imgs/icon-16.png",
      "32": "imgs/icon-32.png"
   },
    "permissions": [ //允许插件访问的url
        "http://*/", 
        "bookmarks", 
        "tabs", 
        "history" 
    ], 
    "background":{//background script即插件运行的环境
        "page":"background.html"
        //"scripts": ["js/jquery.min.js","js/background.js"]//数组.chrome会在扩展启动时自动创建一个包含所有指定脚本的页面
    }, 
     "content_scripts": [{  //对页面内容进行操作的脚本
	      "all_frames": true,
	      "js": ["js/jquery.min.js","js/auto_thank.js"],
	      "matches": [ "*://*.bilibili.com/*" ],
	      "run_at": "document_end"
    }] 
}